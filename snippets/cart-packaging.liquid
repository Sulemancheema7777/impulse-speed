<div class="cart-packaging cart__item-row">
  <label>{{ settings.packaging_title }}</label>
  <div class="freeBoxes">
    <input type="radio" class="packagesRadio" id="freeBoxes" name="attributes[Box]" value="{{ settings.free_box_label | escape }}" required>
    <label class="text-label" for="freeBoxes">{{ settings.free_box_label }}</label><br>
  </div>
  {% if paidBoxes != blank %}
  <div class="paidBoxes">
    <input type="radio" class="packagesRadio" id="paidBoxes" name="attributes[Box]" value="{{ settings.paid_box_label | escape }}" data-vid="{{ paidBoxes.selected_or_first_available_variant.id }}" required>
    <label class="text-label" for="paidBoxes">{{ settings.paid_box_label }}</label>
    <div class="qt-qrapper">
      <label>Select number of boxes&emsp;</label>
      <div class="QuantitySelector">
        <button type="button" class="qtybtn qt-minus" data-qtychange="minus">
          <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" viewBox="0 0 20 20"><path fill="#444" d="M17.543 11.029H2.1A1.032 1.032 0 0 1 1.071 10c0-.566.463-1.029 1.029-1.029h15.443c.566 0 1.029.463 1.029 1.029 0 .566-.463 1.029-1.029 1.029z"/></svg>
        </button>
        <input type="text" class="cart-bundle-input" pattern="[0-9]*" name="quantity" min="2" value="2" aria-label="Package amount" data-vid="{{ paidBoxes.selected_or_first_available_variant.id }}" disabled>
        <button type="button" class="qtybtn qt-plus" data-qtychange="plus">
          <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-plus" viewBox="0 0 20 20"><path fill="#444" d="M17.409 8.929h-6.695V2.258c0-.566-.506-1.029-1.071-1.029s-1.071.463-1.071 1.029v6.671H1.967C1.401 8.929.938 9.435.938 10s.463 1.071 1.029 1.071h6.605V17.7c0 .566.506 1.029 1.071 1.029s1.071-.463 1.071-1.029v-6.629h6.695c.566 0 1.029-.506 1.029-1.071s-.463-1.071-1.029-1.071z"/></svg>
        </button>
      </div>
    </div>
  </div>
  {% endif %}
</div>
